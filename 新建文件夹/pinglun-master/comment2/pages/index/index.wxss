/**index.wxss**/

/*引入样式表 */
/* @import '../../style/weui.wxss'; */
.mail{
  width: 100%;
  height: 200px;
}
.nodata {
  margin-top:-100px;
  width: 100%;
  text-align: center;
}

.comment {
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  background: #f46c55;
  border-radius: 50%;
}

.tit {
  padding: 20rpx 0 10rpx 0;
  color: #ffffff;
  font-size: 30rpx;
}

.bgimg {
  margin: 25rpx;
  width: 75rpx;
  height: 75rpx;
  vertical-align: middle;
}

.allpinglun {
  width: 100%;
}

.allcom {
  width: 100%;
  border-top: 1px #f2f2f2 solid;
}

.plmes {
  flex: 1;
}

.plactive {
  padding-top: 6px;
  width: 120rpx;
  height: 60rpx;
  text-align: right;
  font-size: 28rpx;
   /* border: 1px red solid;  */
}

.smallimg {
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}

.content {
  word-break: break-all;
  font-size: 14px;
}

.replyarea {
  padding: 4px 8px;
  word-break: break-all;
  font-size: 12px;
  background: #f4f4f4;
}

.item {
  display: flex;
  position: relative;
  padding: 12px 12px 6px 12px;
  background-color: #fff;
}

.item1 {
  display: flex;
  position: relative;
  padding: 0px 12px 12px 12px;
  background-color: #fff;
}

.i-right {
  width: 100%;
}

.i-left {
  width: 50px;
}

.c-u-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 8px;
}

.item .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3px;
}

.fb-name {
  color: deepskyblue;
  font-size: 14px;
}

.item1 .u-name {
  color: deepskyblue;
  font-size: 12px;
}

.time {
  color: #888;
  font-size: 12px;
}

.weui-uploader__img {
  width: 68px;
  height: 68px;
}

.ti-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  display: flex;
  z-index: 1000;
  font-size: 32rpx;
  background: #f4f4f4;
  border-top:1px #d9d9d9 solid;
}

.cf-content {
  flex: 1;
  margin: 9px 5px 7px 10px;
  height: 32px;
  width: 100%;
  display: block;
  border-bottom: 1px #1eaa13 solid;
}

.cf-send {
  display: block;
  width: 50px;
  height: 32px;
  line-height: 32px;
  margin: 9px 5px 7px 5px;
  color: #fff;
  border-radius: 2px;
  text-align: center;
  background-color: #1eaa13;
}
.cf-quxixao{
  display: block;
  width: 32px;
  height: 32px;
  line-height: 30px;
  font-size: 50rpx;
  margin: 9px 10px 7px 5px;
  color: #fff;
  border-radius: 2px;
  text-align: center;
  background-color: #F46C55;
}
.hflz {
  position: relative;
}
